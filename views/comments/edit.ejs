<% include ../partials/header%>
<div class="container" style="text-align:center">
<h1>Edit comment</h1>
<form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
    <div class="container" style="width:80%; max-width:400px; margin: 25px auto;">
    <div class="form-group">
        <input class="form-control"  type="text" value="<%=comment.text%>" name="comment[text]">
    </div>
    <div class="form-group">
    <button class="form-control btn btn-primary" >Update</button>
    </div>
    </div>
</form>
<a href="/campgrounds/<%= campground_id %>">Go Back</a>
</div>
<%include ../partials/footer%>