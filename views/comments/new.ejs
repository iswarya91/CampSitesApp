<% include ../partials/header%>
<div class="container" style="text-align:center">
<h1>Add a new Comment to <%= campground.name %></h1>
<form action="/campgrounds/<%= campground._id %>/comments" method="POST">
    <div class="container" style="width:80%; max-width:400px; margin: 25px auto;">
    <div class="form-group">
        <input class="form-control"  type="text" placeholder="text" name="comment[text]">
    </div>
    <div class="form-group">
    <button class="form-control btn btn-primary" >Submit</button>
    </div>
    </div>
</form>
<a href="/campgrounds/<%= campground._id %>">Go Back</a>
</div>
<%include ../partials/footer%>