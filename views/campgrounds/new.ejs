<% include ../partials/header%>
<div class="container" style="text-align:center">
<h1>Add a new Camp ground</h1>
<form action="/campgrounds" method="POST">
    <div class="container" style="width:80%; max-width:400px; margin: 25px auto;">
    <div class="form-group">
        <input class="form-control"  type="text" placeholder="name" name="name">
    </div>
    <div class="form-group">
    <input class="form-control" type="text" placeholder="image url" name="image">
    </div>
    <div class="form-group">
    <input class="form-control" type="number" placeholder="price" name="price" step="0.01" min="0.00">
    </div>
    <div class="form-group">
    <input class="form-control" type="text" placeholder="description" name="description">
    </div>
    <div class="form-group">
    <button class="form-control btn btn-primary" >Submit</button>
    </div>
    </div>
</form>
<a href="/campgrounds">Go Back</a>
</div>
<%include ../partials/footer%>